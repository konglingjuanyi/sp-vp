<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxq.iov.cloud.sp.vp.entity.event.EventDefinitionMapper">

	<resultMap id="eventDefinitionResultMap" type="EventDefinition">
		<id column="ID" javaType="Long"  property="id" jdbcType="DECIMAL" />
		<result column="NAME" jdbcType="VARCHAR" property="name"/>
		<result column="TYPE" jdbcType="DECIMAL" property="type"/>
		<result column="LIFECYCLE" jdbcType="DECIMAL" property="lifecycle"/>
		<result column="IS_EXCLUSIVE" jdbcType="DECIMAL" property="isExclusive"/>
		<result column="IS_CONTINUE" jdbcType="DECIMAL" property="isContinue"/>
		<result column="IS_ROLLBACK" jdbcType="DECIMAL" property="isRollback"/>
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="description"/>
		<result column="STATUS" jdbcType="DECIMAL" property="status"/>
		<result column="CREATE_DATE" jdbcType="TIMESTAMP" property="createDate"/>
		<result column="CREATE_BY" jdbcType="DECIMAL" property="createBy"/>
		<result column="LAST_UPDATE_DATE" jdbcType="TIMESTAMP" property="lastUpdateDate"/>
		<result column="LAST_UPDATE_BY" jdbcType="DECIMAL" property="lastUpdateBy"/>
		<result column="ROW_VERSION" jdbcType="DECIMAL" property="rowVersion"/>
		<result column="IS_VALID" jdbcType="DECIMAL" property="isValid"/>
	</resultMap>
	
	<!-- 分页查询 -->
	<sql id="selectPageTemplate">
		SELECT t.*
		FROM TB_EVENT_DEFINITION t
		WHERE IFNULL(t.is_valid, 1) = 1
	</sql>	
	<select id="selectPageCount" parameterType="hashmap" resultType="long">
		SELECT COUNT(*) FROM (
		<include refid="selectPageTemplate"/>
		) a
	</select>
	
	<select id="selectPage" parameterType="hashmap" resultMap="eventDefinitionResultMap">
        <include refid="selectPageTemplate"/>
        limit #{pageResult.offset}, #{pageResult.pageSize}
    </select>
	<!-- 分页查询 -->

	<!-- 业务查询 -->
    <select id="selectSample" parameterType="EventDefinition" resultMap="eventDefinitionResultMap">
        SELECT * FROM TB_EVENT_DEFINITION t
        WHERE t.is_valid = 1
    </select>

	<select id="selectList" parameterType="hashmap" resultMap="eventDefinitionResultMap">
		<include refid="selectPageTemplate"/>
	</select>

	<select id="selectOne" resultMap="eventDefinitionResultMap" parameterType="java.lang.String">
		<include refid="selectPageTemplate"/>
		AND ID = #{id,jdbcType=VARCHAR}
	</select>

</mapper>